// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
{
	"name": "Full Stack",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/app",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or the host.
	"forwardPorts": [
		5000,
		5432
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install -r requirements.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"dkundel.vscode-new-file",
				"aaron-bond.better-comments",
				"hossaini.bootstrap-intellisense",
				"thebarkman.vscode-djaneiro",
				"batisteo.vscode-django",
				"bigonesystems.django",
				"MaxChamps.django-commands",
				"Emeric-Defay.django-factory",
				"bibhasdn.django-snippets",
				"almahdi.code-django",
				"bibhasdn.django-html",
				"shamanu4.django-intellisense",
				"mikestead.dotenv",
				"usernamehw.errorlens",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.vscode-pull-request-github",
				"eamodio.gitlens",
				"kisstkondoros.vscode-gutter-preview",
				"oderwat.indent-rainbow",
				"VisualStudioExptTeam.vscodeintellicode",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"VisualStudioExptTeam.vscodeintellicode-completions",
				"wholroyd.jinja",
				"WaseemAkram.jinja-snippets-flask",
				"ms-toolsai.jupyter",
				"DavidAnson.vscode-markdownlint",
				"christian-kohler.path-intellisense",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-python.debugpy",
				"KevinRose.vsc-python-indent",
				"littlefoxteam.vscode-python-test-adapter",
				"mechatroner.rainbow-csv",
				"njpwerner.autodocstring"
			]
		}
	},
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	//"remoteUser": "root"
}